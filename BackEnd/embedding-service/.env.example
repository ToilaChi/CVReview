# Application
APP_NAME="Embedding Service"
VERSION="1.0.0"
DEBUG=True

# Embedding Model
EMBEDDING_MODEL_NAME="BAAI/bge-small-en-v1.5"
EMBEDDING_DIMENSION=384
BATCH_SIZE=100

# Qdrant Cloud
QDRANT_URL="https://your-cluster-url.qdrant.io"  # From Qdrant Cloud dashboard
QDRANT_API_KEY="your-api-key-here"  # From Qdrant Cloud dashboard
QDRANT_USE_CLOUD=True  # Set to False for local Qdrant

# Qdrant Local (used when QDRANT_USE_CLOUD=False)
QDRANT_HOST="localhost"  # Use "qdrant" if running in Docker
QDRANT_PORT=6333

# Collections
CV_COLLECTION_NAME="cv_embeddings"
JD_COLLECTION_NAME="jd_embeddings"

# RabbitMQ
# IMPORTANT: Use "rabbitmq" when running in Docker, "localhost" when running locally
RABBITMQ_HOST="localhost"  # Change to "rabbitmq" for Docker
RABBITMQ_PORT=5672
RABBITMQ_USER="guest"
RABBITMQ_PASSWORD="guest"